{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@blockchain/*": ["../blockchain/*"]
    }
  },
  "include": [
    "src/**/*",
    "../blockchain/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}